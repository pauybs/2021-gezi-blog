@model List<TezProje.Models.Siniflar.İletisim>

@{
    ViewBag.Title = "SideBarHakkimda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<link href="~/Content/package/dist/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Content/package/dist/sweetalert2.min.js"></script>
<script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>

@if (TempData["sidebar"] != null)
{

    <script>
        Swal.fire({
            title: 'Başarılı',
            text: 'Sidebar başarıyla güncellendi!',
            icon: 'success',
            confirmButtonText: 'Tamam'
        })
    </script>
}

<h3 class="mt-3">SideBar</h3>

<div class="row">

    @Html.Action("SideBar", "Blog")


    <div class=" col-lg-8 mt-4">
        <div class="text-center">


            @foreach (var x in Model)
            {
                <img class="rounded-circle" src="@x.Mesaj" style="height:75px; width:75px" />
                <h3 class="h4">@x.AdSoyad</h3>
                <p class="text-small text-muted px-sm-4">@x.Konu</p>
                @*<img class="d-block mx-auto mb-3" src="" alt="" width="60">*@

            }
        </div>
        <a href="/Admin/SideBarGetir/6" class="btn btn-block btn-success mt-lg-5 btn-lg">Hakkımızda Alanı Güncelle</a>
    </div>
</div>