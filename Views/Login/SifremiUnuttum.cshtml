@model TezProje.Models.Siniflar.Admin



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Şifremi Unuttum</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("SifreHatirlat","Login",FormMethod.Post))
            {
            
            <div class="modal-body">
                
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Mail adresinizi giriniz.</label>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", type = "email", placeholder = "Email" })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Gönder</button>
            </div>
            }
        </div>
    </div>
</div>
