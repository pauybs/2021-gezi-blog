@model TezProje.Models.Siniflar.Uye


<script>
    function togglePassword() {
        var element = document.getElementById('password');
        element.type = (element.type == 'password' ? 'text' : 'password');
    }
</script>

@using (Html.BeginForm("UyeBilgiGuncelle", "UyeAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

<form class="form-horizontal">

    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Ad</label>

        <div class="col-sm-10">
            @Html.HiddenFor(x => x.UyeID)
            @Html.TextBoxFor(x => x.UyeAd, htmlAttributes: new { @class = "form-control", pattern = "[A-Za-z][ş-Ş]", title = "Adınızda sayı veya özel karakter olamaz. Lütfen 75 karakterden fazla girmeyiniz.", maxlength = "75" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Kullanıcı Adı</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.UyeKullaniciAdi, htmlAttributes: new { @class = "form-control", pattern = ".{1,75}", title = "Lütfen doğru biçimde giriniz." })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Mail</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.UyeMail, htmlAttributes: new { @class = "form-control", @Type = "email", @readonly = "readonly" })

        </div>

    </div>


    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Profil Fotoğrafı</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.UyeFoto, htmlAttributes: new { @class = "form-control", @Type = "file", accept = "image/*" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Hakkımda</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.UyeHakkimda, htmlAttributes: new { @class = "form-control", @Type = "text" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Şehir</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.UyeSehir, htmlAttributes: new { @class = "form-control", @Type = "text" })

        </div>

    </div>


    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">Şifre</label>

        <div class="col-sm-10">

            <div class="input-group mb-3">
                @Html.TextBoxFor(x => x.UyeSifre, htmlAttributes: new { @class = "form-control", @Type = "password", @Id = "password", pattern = ".{1,75}", title = "Lütfen 75 karakterden fazla girmeyiniz." })
                <div class="input-group-append">
                    <div class="input-group-text" onclick="togglePassword()" style="cursor:pointer">
                        <span class="far fa-eye"></span>
                    </div>
                </div>
            </div>


        </div>

    </div>



    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Gönder</button>
        </div>

    </div>

</form>
}
