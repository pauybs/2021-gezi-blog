@model TezProje.Models.Siniflar.KullaniciYazi
@{
    ViewBag.Title = "UyeYaziGetir";
    Layout = "~/Views/Shared/_UyeLayout.cshtml";
}


<h2 class="my-2 ">Yazı Güncelle</h2>

@using (Html.BeginForm("UyeYaziGuncelle", "UyeAdmin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.YaziBaslik)
        @Html.TextBoxFor(x => x.YaziBaslik, new { @Class = "form-control", @required = "required" })
        <br />

        @Html.LabelFor(x => x.YaziAciklama)
        @Html.TextAreaFor(x => x.YaziAciklama, new { @Class = "form-control summernote", id = "summernote" })
        <br />

        @Html.LabelFor(x => x.YaziResim)
        @Html.TextBoxFor(x => x.YaziResim, new { @Class = "form-control" })
        <br />

        @Html.HiddenFor(x => x.YaziID, new { @Class = "form-control" })
        @*@Html.HiddenFor(x => x.YaziTarih, new { @Class = "form-control", @Value = DateTime.Now.ToShortDateString() })*@
        @*@Html.HiddenFor(x => x.Uye, new { @Class = "form-control", @Value = 1 })*@
    </div>

    @*<div class="my-3">
            <h3>Seo Ayarları</h3>
            <hr />

            @Html.LabelFor(x => x.TitleTag)
            @Html.TextBoxFor(x => x.TitleTag, new { @Class = "form-control" })
            <br />

            @Html.LabelFor(x => x.DescriptonTag)
            @Html.TextBoxFor(x => x.DescriptonTag, new { @Class = "form-control" })
            <br />

            @Html.LabelFor(x => x.ResimAltTag)
            @Html.TextBoxFor(x => x.ResimAltTag, new { @Class = "form-control" })
            <br />

            @Html.LabelFor(x => x.YazarID)
            @Html.TextBoxFor(x => x.YazarID, new { @Class = "form-control" })
            <br />
        </div>*@
    <button class="btn btn-primary btn-block btn-lg ">Güncelle</button>
}


<script src="~/Scripts/jquery-3.4.1.slim.min.js"></script>
<link href="~/summernote/summernote-lite.min.css" rel="stylesheet" />
<script src="~/summernote/summernote-lite.min.js"></script>
<script src="~/summernote/lang/summernote-tr-TR.min.js"></script>

