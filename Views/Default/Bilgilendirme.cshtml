@using TezProje.Models.Siniflar
@model List<Bilgilendirme>


<div class="container py-4">
    @Html.Action("BilgilendirmeBaslik","Default")
    <div class="row text-center">
        @foreach (var x in Model)
        {
            <div class="col-lg-3 col-md-6">
                <img class="mb-4 img-fluid lazy" src="@x.FotoUrl" alt="" style="height:150px;">

                <h3 class="h5">@x.Baslik</h3>
                <p class="text-small text-muted">@x.Aciklama</p>

            </div>

        }

    </div>
</div>

<script src="~/Views/Default/jquery.lazyload.js"></script>

<script type="text/javascript" charset="utf-8">
    $(function () {
        $("img.lazy").lazyload();
    });
</script>

