@using TezProje.Models.Siniflar
@model List<Blog>

@foreach (var x in Model)
{


    string metin = System.Text.RegularExpressions.Regex.Replace(x.Aciklama, @"<[^>]+>|&nbsp;", "").Trim();
    <div class="row align-items-stretch ">
        <div class="col-lg-6 col-sm-12  pl-lg-0 order-2 order-lg-1">
            <a class="d-block h-100 bg-center bg-cover my-3" href="/Blog/@Url.FriendlyUrl(x.Baslik)/@x.BlogID/">
                <img src="@x.BlogResim" alt="@x.ResimAltTag" class="img-fluid lazy" />
            </a>
        </div>
        <div class="col-lg-6 col-sm-12 pr-lg-0 order-1 order-lg-2">
            <div class="h-100 bg-light d-flex align-items-center">
                <div class="py-5 pr-4 pl-3 pl-lg-0 text-right">
                    <p class=" font-weight-bold small text-uppercase mb-2"></p>
                    <h3 class="h4"> <a class="text-reset" href="/blog/@Url.FriendlyUrl(x.Baslik)/@x.BlogID/">@x.Baslik</a></h3>
                    <p class="text-muted text-small mb-0  p-3">
                        @metin.Substring(0, 200)...
                    </p>

                    <a href="/Blog/@Url.FriendlyUrl(x.Baslik)/@x.BlogID/" class=" my-2 btn btn-sm btn-outline-success">Devamını Oku</a>

                    <ul class="list-inline small text-uppercase mb-0">
                        <li class="list-inline-item align-middle"><i class="fas fa-user"></i></li>
                        <li class="list-inline-item mr-0 text-gray align-middle">Yazar -</li>
                        <li class="list-inline-item align-middle mr-0"><a class="font-weight-bold reset-anchor" href="#">@x.Admin.AdSoyad</a></li>
                        <li class="list-inline-item text-gray align-middle mr-0">|</li>
                        <li class="list-inline-item text-gray align-middle">@x.Tarih.ToString().AsDateTime().ToString("dd/MM/yyyy")</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
}

<script src="~/Views/Default/jquery.lazyload.js"></script>

<script type="text/javascript" charset="utf-8">
    $(function () {
        $("img.lazy").lazyload();
    });
</script>
