<script src="~/Content/package/dist/sweetalert2.min.js"></script>
<script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
@if (TempData["yorumblog"] != null)
{

    <script>
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            text: 'Yorumunuz yönetici tarafından onaylandıktan sonra yayınlanacaktır.',
            showConfirmButton: false,
            timer: 2500
        })
    </script>
}