@using TezProje.Models.Siniflar
@model List<Blog>
<div class="col-lg-4 my-4 ">
    <!-- About me widget -->
    <div class="sticky-top " style="z-index:0;">

        <div class="row  card p-4 shadow ">

            <div class="mb-5 text-center mt-0 mt-md-5">
                @*<i class="fas fa-user-circle fa-4x"></i>*@
               
              
                
                @Html.Action("SideBarHakkimda","Blog")
                @Html.Action("SosyalMedya","Blog")
                
            </div>
            <!-- Categories widget -->
            <!-- Latest posts widget -->
            <div class="mb-3">
                <h3 class="h5 my-3">Rastgele İçerik</h3>
                @*<p class="text-small text-muted mb-4">Lorem ipsum dolor sit, consectetur adipisicing elit, sed do eiusmod.</p>*@
                <ul class="list-unstyled">
                    @foreach (var x in Model)
                    {

                        string metin = System.Text.RegularExpressions.Regex.Replace(x.Aciklama, @"<[^>]+>|&nbsp;", "").Trim();
                        <li class="media mb-1">
                            <a href="/blog/@Url.FriendlyUrl(x.Baslik)/@x.BlogID"><img src="@x.BlogResim" alt="@x.BlogResim" width="80"></a>
                            <div class="media-body ml-3">
                                <p class="small text-gray text-uppercase mb-0">@x.Tarih.ToString().AsDateTime().ToString("dd/MM/yyyy")</p>
                                <h6 class="mb-1"><a class="reset-anchor" href="/blog/@Url.FriendlyUrl(x.Baslik)/@x.BlogID">@x.Baslik</a></h6>
                                <p class="small text-muted">@metin.Substring(0,70)</p>
                            </div>
                        </li>
                    }
